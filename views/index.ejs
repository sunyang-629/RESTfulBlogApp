<%- include ("./partials/header") %>

<div class="container main">

<% blogs.forEach(blog => { %>
    <div>
        <h2><%=blog.title %></h2>
        <img src="<%=blog.image %>" alt="">
        <span><%=blog.created %></span>
        <p><%=blog.body.substring(0,100) %>...</p>
        <a href="/blogs/<%=blog._id %>">READ MORE</a>
    </div>
<% }) %>
</div>

<%- include ("./partials/footer") %>