<%- include ("./partials/header") %>
<div class="ui form main text container segment">
    <div class="ui huge header">EDIT <%=blog.title%></div>
    <form action="/blogs/<%=blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="">Title</label>
            <input type="text" name="blog[title]" value="<%=blog.title %>">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" name="blog[image]" value="<%=blog.image %>">
        </div>
        <div class="field">
            <label for="">Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10"><%=blog.body %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>
<%- include ("./partials/footer") %>